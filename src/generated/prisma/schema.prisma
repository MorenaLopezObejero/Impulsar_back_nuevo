generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  email     String  @id
  contasena String
  nombreUsu String
  foto      String?

  emprendimiento Emprendimiento[]
  contactos      Contactos[]
}

model Emprendimiento {
  Id        Int     @id @default(autoincrement())
  nombreEmp String
  colores   String?

  rela_emp_usu Usuario @relation(fields: [usuario], references: [email])
  usuario      String

  rela_emp_typoemp Typo_emprendimiento @relation(fields: [tipo], references: [typo])
  tipo             String

  material_CyS Materiales_CyS[]
  producto_CyS Productos_CyS[]
}

model Typo_emprendimiento {
  typo        String  @id
  descripcion String
  foto        String?

  producto       Productos[]
  emprendimiento Emprendimiento[]
}

model Productos {
  nombre       String  @id
  descripcion  String
  pasos        String
  herramientas String
  foto         String?

  rela_prod_typo Typo_emprendimiento @relation(fields: [tipo], references: [typo])
  tipo           String

  prod_mat     Prod_Mat[]
  producto_CyS Productos_CyS[]
}

model Productos_CyS {
  Id    Int     @id @default(autoincrement())
  costo String?
  stock Int?

  rela_Prod Productos @relation(fields: [producto], references: [nombre])
  producto  String

  rela_Emp       Emprendimiento @relation(fields: [emprendimiento], references: [Id])
  emprendimiento Int
}

model Prod_Mat {
  Id       Int    @id @default(autoincrement())
  cantidad String

  rela_PyM Productos @relation(fields: [producto], references: [nombre])
  producto String

  rela_MyP   Materiales @relation(fields: [materiales], references: [nombreMat])
  materiales String
}

model Materiales {
  nombreMat String  @id
  unidad    String
  foto      String?

  prod_mat       Prod_Mat[]
  materiales_CyS Materiales_CyS[]
}

model Materiales_CyS {
  Id    Int     @id @default(autoincrement())
  costo String?
  stock Int?

  rela_Mat   Materiales @relation(fields: [materiales], references: [nombreMat])
  materiales String

  rela_Emp       Emprendimiento @relation(fields: [emprendimiento], references: [Id])
  emprendimiento Int
}

model Contactos {
  Id         Int     @id @default(autoincrement())
  nombre     String
  email      String?
  telefono   Int?
  redes_soc  String?
  notas_perz String?
  foto       String?

  propietario Usuario @relation(fields: [host], references: [email])
  host        String
}
